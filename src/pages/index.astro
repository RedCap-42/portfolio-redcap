---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import Globe from "../components/Globe";
---

<script>
  import { stagger, animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../lib/constants";
  import { startAsciiGlobe } from "../components/AsciiGlobe";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        type: "spring",
        at: "-0.1",
        delay: stagger(0.3),
      },
    ],
  ];

  animate(sequence as AnimationSequence);

  const mount = document.getElementById("portfolio-ascii-globe");
  if (mount) {
    startAsciiGlobe(mount, { columns: 22, rows: 12, fps: 24, speed: 0.7 });
  }
</script>

<Layout
  description="Je suis Simon (aka CasquetteRouge), étudiant en France. Je crée des outils sur mesure et des projets créatifs autour du dev, de la 3D et du montage."
  title="Simon (CasquetteRouge)"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <TimeZone />
    <Now />
    <Card
      colorText="text-neutral-900"
      colSpan="md:col-span-1"
      href="travel"
      rowSpan="md:row-span-1"
      title="Pays visités"
    >
      <div class="h-full w-full absolute inset-0 -z-10">
        <Globe client:load />
      </div>
    </Card>
    <Card
      colSpan="md:col-span-1"
      href="/portfolio"
      rowSpan="md:row-span-2 flex gap-1"
      title="Portfolio"
    >
      <div
        id="portfolio-ascii-globe"
        class="w-full h-full flex items-center justify-center text-neutral-100 select-none"
        style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;"
      />
    </Card>
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2025 · Crée par CasquetteRouge
      </p>
    </Card>
  </main>
</Layout>
