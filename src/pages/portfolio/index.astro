---
import Layout from "../../layouts/Layout.astro";
import PortfolioFilter from "../../components/Portfolio/PortfolioFilter.svelte";
---

<script>
  import { animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../../lib/constants";

  const sequence = [loaderAnimation];

  animate(sequence as AnimationSequence);
</script>

<Layout
  description="Portfolio de créations 3D, Pets Minecraft et Motion Graphics"
  title="Portfolio - Simon (CasquetteRouge)"
>
  <main
    class="w-full min-h-screen flex flex-col justify-start items-start max-w-6xl mx-auto p-4 md:p-8"
  >
    <a
      class="text-white bg-neutral-900 hover:bg-neutral-800 px-4 py-2 mb-8 border border-neutral-700 rounded-lg transition-colors text-sm"
      href="/"
    >
      ← Retour
    </a>
    
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">Portfolio</h1>
      <p class="text-neutral-400">Découvrez mes dernières créations en 3D, Minecraft et Motion.</p>
    </div>

    <PortfolioFilter client:load />
  </main>
</Layout>
